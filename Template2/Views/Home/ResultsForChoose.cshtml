@{
}
@model IEnumerable<List<Template2.Models.ActivitiesModel>>


<div class="third_page">
    <div class="third_page_center">
        <div class="select">
            Let’s select preferred schedule
        </div>
        <div class="variants">
            <div class="variant_1">
                <div class="tablesheet">
                    <table class="list_activities">
                        
                        @foreach( var item in Model.ToList()[0])
                        {
                            <tr>
                                <td>@Html.DisplayFor(m => item.Activity)</td>
                                <td>@Html.DisplayFor(m => item.Time)</td>
                            </tr>
                        }
                        
                    </table>

                </div>
                <button class="button_result_selection">
                    Select
                </button>
            </div>
            <div class="variant_2">
                <div class="tablesheet">
                    <table class="list_activities">
                        @foreach (var item in Model.ToList()[1])
                        {
                            <tr>
                                <td>@Html.DisplayFor(m => item.Activity)</td>
                                <td>@Html.DisplayFor(m => item.Time)</td>
                            </tr>
                        }
                    </table>
                    
                </div>
                <button class="button_result_selection">
                    Select
                </button>
            </div>
        </div>
    </div>
</div>