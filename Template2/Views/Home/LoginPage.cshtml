
@model LoginInformationModel
<style>
    input[type=text] {
       
        box-sizing: border-box;
        border: 2px solid #FC80A5;
        border-radius: 2px;
        margin: 0 0 0 0;
        padding: 0 0 0 0;
    }

    input[type=text]:active {
        box-sizing: border-box;
        border: 3px solid #FC80A5;
        border-radius: 4px;
        margin: 0 0 0 0;
        padding: 0 0 0 0;
    }

        input[type=text]:focus {
            box-sizing: border-box;
            border: 4px solid #FC80A5;
            border-radius: 4px;
            margin: 0 0 0 0;
            padding: 0 0 0 0;
        }
</style>
<div class="page_centering">
    <div class="picture_left">
        <img class="img_multihands" src="~/images/img_mother_multihands.png" alt="Multihands" width="633px" height="450px">
    </div>
 <div class="form_login">
    
        <form asp-controller="home" asp-action="LoginPage" method="post">
        <p class="text">Create an account</p>
            <div class="form_group">
                <label for="Login">Login:</label><br>
                <input type="text" asp-for="Login" class="form_control" /><br>
                <span asp-validation-for="Login" class="text-danger"> </span>
            </div>
            <div class="form_group">
                <label for="FirstName">First name:</label><br>
                <input type="text" asp-for="FirstName" class="form_control" /><br>
                <span asp-validation-for="FirstName" class="text-danger"> </span>
            </div>
            <div class="form_group">
                <label for="LastName">Last name:</label><br>
                <input type="text" asp-for="LastName" class="form_control" /><br>
                <span asp-validation-for="LastName" class="text-danger"> </span>
            </div>
            <div class="form_group">
                <label for="Email">Email:</label><br>
                <input type="text" asp-for="Email" class="form_control" /><br>
                <span asp-validation-for="Email" class="text-danger"> </span>
            </div>
            <div class="form_group">

                <label for="Password">Password:</label><br>
                <input type="text" asp-for="Password" class="form_control" />
                <span asp-validation-for="Password" class="text-danger"> </span>
            </div>

            <div class="form_group">

                <label for="PasswordConfirm">Confirm your password:</label><br>
                <input type="text" asp-for="PasswordConfirm" class="form_control" />
                <span asp-validation-for="PasswordConfirm" class="text-danger"> </span>
            </div>

            <button class="button-style" type="submit">
                Registrate
            </button>
        </form>
</div>
</div>
